#!/bin/zsh

if [[ $# -eq 0 ]]; then
  £ --help
else

  case "$1" in
      bam)
        rocknroll-cli
        ;;
      edit)
        subl ~/my
        ;;
      open)
        open ~/my
        ;;
      --help)
        printf "\n"
        printf "The \`£\` command, all you need for \`my\`."
        printf "\n\n"
        printf "usage: £ [<command>|--help]"
        printf "\n\n"
        printf "      bam     start install/update/upgrade"
        printf "\n"
        printf "      edit    edit the project \`my\`"
        printf "\n"
        printf "      open    open in finder"
        printf "\n"
        printf "\n"
        ;;
      *)
        echo 'What did you say?'
        ;;
  esac

fi
